html,body
  height 100%
  width 100%
  font-family "微软雅黑", "Microsoft YaHei", "Arial Regulal"
  margin 0 
  padding 0 
  background #FFF
  font-size 14px
  color #212121
  user-select none
input
  font-family "Microsoft YaHei", "Arial Regulal", arial
div,form,img,ul,ol,li,dl,dt,dd
  margin 0 
  padding 0
  border 0
li
  list-style-type none
img
  vertical-align top
  border none
h1,h2,h3,h4,h5,h6
  margin 0 
  padding 0
  font-size 14px
  font-weight normal
a
  text-decoration none
  color #212121
  &:hover
    color #f7ba2a
button
  margin: 0;
  padding: 0;
  border: 1px solid transparent;  //自定义边框
  outline: none; 
  background-color #fff

input:-webkit-autofill,input:-webkit-autofill:hover,input:-webkit-autofill:focus,input:-webkit-autofill:active
  -webkit-transition-delay 999999999s
  -webkit-transition color 999999999s ease-out, background-color 999999999s ease-out